# Daylily Configuration Example
# Copy this file to .env and customize for your environment
# All values shown are defaults unless marked [REQUIRED]

# ========== Environment ==========
DAYLILY_ENV=development  # development, staging, production

# ========== AWS Configuration ==========
AWS_DEFAULT_REGION=us-west-2
# AWS_PROFILE=  # Optional: AWS profile name
# AWS_ACCOUNT_ID=  # Optional: AWS account ID

# ========== DynamoDB Tables ==========
WORKSET_TABLE_NAME=daylily-worksets
CUSTOMER_TABLE_NAME=daylily-customers
DAYLILY_MANIFEST_TABLE=daylily-manifests
DAYLILY_LINKED_BUCKETS_TABLE=daylily-linked-buckets
DAYLILY_FILE_REGISTRY_TABLE=daylily-file-registry

# ========== S3 Configuration ==========
# DAYLILY_CONTROL_BUCKET=  # [REQUIRED in production] Control plane bucket
# DAYLILY_MONITOR_BUCKET=  # Legacy alias for control bucket
# S3_BUCKET=  # Default bucket for workset data
S3_PREFIX=worksets/

# ========== Authentication ==========
ENABLE_AUTH=false
# COGNITO_USER_POOL_ID=  # [REQUIRED if ENABLE_AUTH=true]
# COGNITO_APP_CLIENT_ID=  # [REQUIRED if ENABLE_AUTH=true]
SESSION_SECRET_KEY=daylily-dev-secret-change-in-production  # [CHANGE IN PRODUCTION]

# ========== CORS Configuration ==========
CORS_ORIGINS=*  # Comma-separated list; use specific origins in production

# ========== API Server ==========
API_HOST=0.0.0.0
API_PORT=8001

# ========== Notifications (Optional) ==========
# SNS_TOPIC_ARN=
# DAYLILY_SNS_TOPIC_ARN=
# LINEAR_API_KEY=
# LINEAR_TEAM_ID=

# ========== Daylily Project Config (Optional) ==========
# DAY_PROJECT=
# DAY_AWS_REGION=
# DAY_EX_CFG=
# DAYLILY_PRIMARY_REGION=
# DAYLILY_MULTI_REGION=false
# DAY_BIOME=
# DAY_ROOT=
# APPTAINER_HOME=

# ========== Logging ==========
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

