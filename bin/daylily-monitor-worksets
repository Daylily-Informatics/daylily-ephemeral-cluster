#!/usr/bin/env python3
"""Backward compatible entrypoint for the legacy workset monitor script."""

from __future__ import annotations

import os
import sys
from pathlib import Path


def main() -> int:
    script = Path(__file__).with_name("daylily-workset-monitor")
    if not script.exists():
        raise SystemExit("daylily-workset-monitor script is missing")
    os.execv(str(script), [str(script)] + sys.argv[1:])
    return 0


if __name__ == "__main__":
    sys.exit(main())
